{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "rootDirectory": "backend"
    },
    "deploy": {
        "startCommand": "gunicorn -c gunicorn_config.py main:app",
        "healthCheckPath": "/api/health",
        "restartPolicyType": "ON_FAILURE",
        "port": 8000
    }
}